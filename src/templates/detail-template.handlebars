<div class="container">
    <div class="sidebar">
        <figure style="background-image: url('{{ coverimage }}');"></figure>
    </div>

    <div class="maincontent">
        <div class="close" id="close">
            <img src="img/icon-close.svg" alt="X">
        </div>
        <h1>{{ title }}</h1>
        <p>{{ description }}</p>
        <div class="meta">
            <span class="author"><i class="icon-author"></i> {{ author }}</span>
            <span class="genre"><i class="icon-genre"></i> {{ genres }}</span>
        </div>
    </div>
</div>